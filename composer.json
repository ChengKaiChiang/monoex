{
    "name": "mileschou/monoex",
    "description": "Monolog extensions",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MilesChou",
            "email": "jangconan@gmail.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "monolog/monolog": "^1 | ^2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "suggest": {
        "laminas/laminas-diactoros": "Require ^2 if need use PSR-17 HTTP factory",
        "symfony/http-client": "Require ^4.4 | ^5 if need use PSR-18 HTTP client"
    },
    "require-dev": {
        "laminas/laminas-diactoros": "^2.2",
        "mileschou/psr": "^1.1",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^7.5 | ^8",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\Monoex\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
